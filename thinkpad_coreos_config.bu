variant: fcos
version: 1.4.0
passwd:
  users:
    - name: core
      ssh_authorized_keys:
        - ssh-rsa  m@cu
systemd:
  units:
    - name: cuddly_jellyfin.service
      enabled: true
      contents: |
        [Unit]
        Description=container-cuddly_jellyfin.service
        Documentation=man:podman-generate-systemd(1)
        Wants=network-online.target
        After=network-online.target
        RequiresMountsFor=%t/containers
        
        [Service]
        Environment=PODMAN_SYSTEMD_UNIT=%n
        Restart=on-failure
        TimeoutStopSec=70
        ExecStartPre=/bin/podman rm -i -f %N
        ExecStartPre=/bin/rm -f %t/%n.ctr-id
        ExecStart=/usr/bin/podman run --conmon-pidfile %t/container-cuddly_jellyfin.pid --cidfile=%t/%n.ctr-id --cgroups=no-conmon --replace --detach --label io.containers.autoupdate=registry --name cuddly_jellyfin --publish 8096:8096/tcp --user 1000:1000 --userns keep-id --volume jellyfin-cache:/cache:Z --volume jellyfin-config:/config:Z --mount type=bind,source=/var/home/core/multimedia/,destination=/media,ro=true docker.io/jellyfin/jellyfin:latest
        ExecStop=/usr/bin/podman stop --ignore -t 10 --cidfile=%t/%n.ctr-id
        ExecStopPost=/usr/bin/podman rm -f --ignore -t 10 --cidfile=%t/%n.ctr-id
        PIDFile=%t/container-cuddly_jellyfin.pid
        KillMode=control-group
        Type=forking
        
        PrivateTmp=yes
        NoNewPrivileges=yes
        ProtectSystem=strict
        ProtectHome=yes
        ProtectKernelTunables=yes
        ProtectControlGroups=yes
        PrivateMounts=yes
        ProtectHostname=yes
        
        [Install]
        WantedBy=multi-user.target default.target
